#!/usr/bin/python
from numpy.linalg import eig

"""
Functions for running pure spectral algorithm on small blocks
"""
def spectral(We, Q):
    V, D = eig(We)
    n = We.shape[0]
    eigenv = np.diag(D)
    verbose, I = sort(eigenv)
    V1 = V[:,I]
    evec = V1[:,1:(Q-1)]
    idxt = ones(1,n)
    idxt[evec>0] = 2
    idxt[evec==0] = 0
    return idxt

